<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="io.devcrew.mvvmdatabinding.view.TodoDetailFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mTodo"
            type="io.devcrew.mvvmdatabinding.model.Todo"/>
    </data>

    <FrameLayout

        android:id="@+id/rootLayout"
        android:tag="rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{mTodo.description}" />
    </FrameLayout>
</layout>